<style>
    .button {
        position: fixed;
        top: calc(50% - 30px);
        left: calc(50% - 100px);
        height: 60px;
        /*width: 200px;*/
        padding: 0 25px;
        border: 3px solid tomato;
        border-radius: 35px;
        transition: all 200ms ease-out;
    }

        .button:hover {
            background: tomato;
        }

            .button:hover .detail {
                color: aliceblue;
            }

    .detail {
        color: tomato;
        font-size: 24px;
        font-family: "Microsoft Yahei", sans-serif, Arial, Verdana;
        margin-top: 15px;
        text-align: center;
        transition: all 200ms ease-out 100ms;
    }
</style>
<div>
    <div class="button">
        <p class="detail">去逛逛!</p>
    </div>
</div>
